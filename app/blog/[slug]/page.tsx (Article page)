// app/blog/[slug]/page.tsx
'use client';

import React, { useState, useEffect } from 'react';
import { ArrowLeft, Calendar, Clock, Share2, BookmarkIcon, ChevronRight } from 'lucide-react';
import Link from 'next/link';
import { useParams } from 'next/navigation';
import { articles, Article } from '@/app/data/articles';

export default function ArticlePage() {
  const params = useParams();
  const slug = params?.slug as string;
  const [article, setArticle] = useState<Article | null>(null);
  const [isBookmarked, setIsBookmarked] = useState(false);
  const [isLoading, setIsLoading] = useState(true);

  useEffect(() => {
    if (slug) {
      const foundArticle = articles.find(a => a.id === slug);
      setArticle(foundArticle || null);
      setIsLoading(false);
    }
  }, [slug]);

  if (isLoading) {
    return (
      <div className="min-h-screen bg-background text-foreground flex items-center justify-center">
        <p className="text-muted-foreground">Loading article...</p>
      </div>
    );
  }

  if (!article) {
    return (
      <div className="min-h-screen bg-background text-foreground flex items-center justify-center px-4">
        <div className="text-center">
          <h1 className="font-garamond text-4xl font-bold mb-4">Article Not Found</h1>
          <p className="text-muted-foreground mb-8">The article you're looking for doesn't exist.</p>
          <Link
            href="/blog"
            className="text-orange-500 hover:text-orange-600 font-semibold inline-flex items-center gap-2"
          >
            <ArrowLeft className="w-4 h-4" />
            Back to Blog
          </Link>
        </div>
      </div>
    );
  }

  const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
  };

  return (
    <div className="min-h-screen bg-background text-foreground font-sans">
      {/* BACK BUTTON */}
      <div className="sticky top-20 z-40 bg-background/80 backdrop-blur border-b border-border">
        <div className="max-w-6xl mx-auto px-4 md:px-8 lg:px-12 py-3 md:py-4">
          <Link
            href="/blog"
            className="text-orange-500 hover:text-orange-600 font-semibold inline-flex items-center gap-2"
          >
            <ArrowLeft className="w-4 h-4" />
            Back to Blog
          </Link>
        </div>
      </div>
      {/* ARTICLE HEADER */}
      <section className="py-8 md:py-12 px-4 md:px-8 lg:px-12 border-b border-border">
        <div className="max-w-4xl mx-auto">
          <div className="inline-block px-4 py-1.5 bg-orange-500/10 text-orange-600 dark:text-orange-400 text-sm font-semibold rounded-full mb-6">
            {article.categoryLabel}
          </div>
          <h1 className="font-garamond text-4xl lg:text-5xl font-bold mb-6 leading-tight">
            {article.title}
          </h1>
          <div className="flex flex-wrap items-center gap-6 text-sm text-muted-foreground mb-8">
            <div><span className="font-semibold text-foreground">{article.author}</span></div>
            <div className="flex items-center gap-2">
              <Calendar className="w-4 h-4" />
              {formatDate(article.date)}
            </div>
            <div className="flex items-center gap-2">
              <Clock className="w-4 h-4" />
              {article.readTime} min read
            </div>
          </div>
          <div className="flex flex-col sm:flex-row gap-3">
            <button
              onClick={() => setIsBookmarked(!isBookmarked)}
              className={`px-4 py-3 rounded-lg border transition-all flex items-center gap-2 ${
                isBookmarked
                  ? 'bg-orange-500 text-white border-orange-500'
                  : 'border-border hover:border-orange-500/50'
              }`}
            >
              <BookmarkIcon className="w-4 h-4" />
              {isBookmarked ? 'Saved' : 'Save Article'}
            </button>
            <button className="px-4 py-3 border border-border rounded-lg hover:border-orange-500/50 transition-all flex items-center gap-2">
              <Share2 className="w-4 h-4" />
              Share
            </button>
          </div>
        </div>
      </section>
      {/* ARTICLE CONTENT */}
      <section className="py-12 px-4 md:px-8 lg:px-12">
        <div className="max-w-4xl mx-auto">
          <div
            className="text-lg leading-relaxed space-y-6 max-w-none"
            dangerouslySetInnerHTML={{ __html: article.content }}
          />
          {/* RELATED ARTICLES */}
          <div className="border-t border-border my-12 pt-12">
            <div className="bg-card border border-border rounded-lg p-6 mb-12">
              <h3 className="font-garamond text-xl font-bold mb-3">About the Author</h3>
              <p className="text-muted-foreground">
                {article.author} is an expert in their field with years of experience sharing valuable insights and strategies to help businesses succeed.
              </p>
            </div>
            {article.relatedArticles && article.relatedArticles.length > 0 && (
              <div>
                <h3 className="font-garamond text-2xl font-bold mb-6">Related Articles</h3>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                  {article.relatedArticles.map(id => {
                    const relatedArticle = articles.find(a => a.id === id);
                    if (!relatedArticle) return null;
                    return (
                      <Link key={id} href={`/blog/${id}`}>
                        <div className="bg-card border border-border rounded-lg p-6 hover:border-orange-500/50 transition-all group h-full cursor-pointer">
                          <div className="flex items-start justify-between gap-3">
                            <div className="flex-1">
                              <h4 className="font-garamond font-bold text-foreground group-hover:text-orange-500 transition-colors mb-2 line-clamp-2">
                                {relatedArticle.title}
                              </h4>
                              <p className="text-sm text-muted-foreground">Continue reading</p>
                            </div>
                            <ChevronRight className="w-5 h-5 text-orange-500 group-hover:translate-x-1 transition-transform flex-shrink-0" />
                          </div>
                        </div>
                      </Link>
                    );
                  })}
                </div>
              </div>
            )}
          </div>
        </div>
      </section>
      {/* NEWSLETTER CTA */}
      <section className="py-16 px-4 md:px-8 lg:px-12 border-t border-border bg-card">
        <div className="max-w-3xl mx-auto text-center">
          <h3 className="font-garamond text-3xl font-bold mb-3">Get More Insights</h3>
          <p className="text-muted-foreground mb-8">Subscribe to receive more articles like this delivered to your inbox.</p>
          <div className="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
            <input
              type="email"
              placeholder="your@email.com"
              className="flex-1 px-4 py-3 bg-background border border-border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
            <button className="px-6 py-3 bg-orange-500 hover:bg-orange-600 text-white font-semibold rounded-lg transition-colors whitespace-nowrap">
              Subscribe
            </button>
          </div>
        </div>
      </section>
    </div>
  );
}